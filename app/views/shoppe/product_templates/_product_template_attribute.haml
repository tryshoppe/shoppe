%tr
  %td
    = f.text_field :key, :placeholder => t('shoppe.product_templates.name')
    = f.hidden_field :position, :class => 'position'
  %td.searchable= f.check_box :searchable
  %td.searchable= f.check_box :public
  %td.remove
    = f.hidden_field :_destroy, :value => false, :class =>'destroy'
    = link_to t('shoppe.product_templates.remove'), '#', :class => 'button button-mini purple remove-attribute'
  %td.handle
